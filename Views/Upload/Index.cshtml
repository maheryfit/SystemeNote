@{
    ViewData["Title"] = "Import Data";
}

<h1>@ViewData["Title"]</h1>

<h4>Select a data type to import via CSV file.</h4>
<hr />

<div class="list-group">
    <a asp-action="UploadStudents" class="list-group-item list-group-item-action">Import Students</a>
    <a asp-action="UploadDiplomes" class="list-group-item list-group-item-action">Import Diplomas</a>
    <a asp-action="UploadPromotions" class="list-group-item list-group-item-action">Import Promotions</a>
    <a asp-action="UploadMatieres" class="list-group-item list-group-item-action">Import Subjects (Matières)</a>
    <a asp-action="UploadConfigs" class="list-group-item list-group-item-action">Import Configurations</a>
    <a asp-action="UploadSemestres" class="list-group-item list-group-item-action">Import Semesters</a>
    <a asp-action="UploadAdministrateurs" class="list-group-item list-group-item-action">Import Administrators</a>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info mt-3" role="alert">
        @* Html.Raw est utilisé pour que les balises HTML comme <br/> soient interprétées correctement *@
        <p>@Html.Raw(TempData["Message"])</p>
    </div>
}