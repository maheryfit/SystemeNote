@{
    ViewData["Title"] = "Import Diplomas";
}

<h4>@ViewData["Title"]</h4>

<h4>Upload a CSV file with one column: <strong>NomDiplome</strong></h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Upload" asp-action="UploadDiplomes" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="file" class="control-label">CSV File</label>
                <input name="file" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to Hub</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}