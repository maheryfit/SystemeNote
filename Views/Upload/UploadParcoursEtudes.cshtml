@{
    ViewData["Title"] = "Importer Parcours Etudes";
}

<h2>Importer Parcours Etudes</h2>

<form asp-action="UploadParcoursEtudes" enctype="multipart/form-data" method="post">
    <div class="form-group mb-3">
        <label>Fichier CSV (CodeMatiere, CodeUniteEnseignement, NomPlanifSemestre)</label>
        <input type="file" name="file" class="form-control" required />
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="createMissingMatieres" name="createMissingMatieres"
            value="true">
        <label class="form-check-label" for="createMissingMatieres">
            Créer automatiquement les matières manquantes (le Code sera utilisé comme Nom)
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Importer</button>
</form>

<div class="mt-3">
    <a asp-action="Index">Retour</a>
</div>