@model SystemeNote.ViewModels.SemesterRankingViewModel
@using SystemeNote.ViewModels

@{
    Layout = null; // Important: Le PDF ne doit pas hériter du layout principal
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Classement - @Model.PlanifSemestre.NomPlanifSemestre</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            font-size: 12px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

        .table th,
        .table td {
            border: 1px solid #dee2e6;
            padding: .5rem;
        }

        .table th {
            background-color: #f2f2f2;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <h1>Classement pour @Model.PlanifSemestre.NomPlanifSemestre</h1>

    <h4>Statistiques</h4>
    <p>
        <strong>Admis:</strong> @Model.Stats.AdmisCount (@Model.Stats.AdmisPercentage.ToString("F1")%) |
        <strong>Ajournés:</strong> @Model.Stats.AjourneCount (@Model.Stats.AjournePercentage.ToString("F1")%) |
        <strong>Moyenne de classe:</strong> @Model.Stats.ClassAverage.ToString("F2") |
        <strong>Variance:</strong> @Model.Stats.GradeVariance.ToString("F2")
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Rang</th>
                <th>Matricule</th>
                <th>Nom</th>
                <th>Prénom</th>
                @foreach (var ue in Model.StudentRankings.FirstOrDefault()?.UeGrades ?? new List<UeGradeRecord>())
                {
                    <th title="@ue.UeName">@ue.UeCode</th>
                }
                <th>Moyenne Générale</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.StudentRankings)
            {
                <tr>
                    <td><strong>@item.Rank</strong></td>
                    <td>@item.Etudiant.Matricule</td>
                    <td>@item.Etudiant.Nom</td>
                    <td>@item.Etudiant.Prenom</td>
                    @foreach (var ueGrade in item.UeGrades)
                    {
                        <td>@ueGrade.UeAverage.ToString("F2")</td>
                    }
                    <td><strong>@item.OverallAverage.ToString("F2")</strong></td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>