@model Matiere

@{
    ViewData["Title"] = "Edit Matiere";
}

<h1>Edit Matiere</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="NomMatiere" class="control-label"></label>
                <input asp-for="NomMatiere" class="form-control" />
                <span asp-validation-for="NomMatiere" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CodeMatiere" class="control-label"></label>
                <input asp-for="CodeMatiere" class="form-control" />
                <span asp-validation-for="CodeMatiere" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
