@page
@model SystemeNote.Pages.Account.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Connexion";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Système de note</title>

    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" asp-append-version="true">
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Connexion</h1>
                                    </div>

                                    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @Model.ErrorMessage
                                        </div>
                                    }

                                    <form method="post" class="user">
                                        <input type="hidden" asp-for="ReturnUrl" />

                                        <div class="form-group">
                                            <input asp-for="Input.Username" class="form-control form-control-user" placeholder="Matricule / Nom d'utilisateur" />
                                            <span asp-validation-for="Input.Username" class="text-danger small"></span>
                                        </div>

                                        <div class="form-group">
                                            <input asp-for="Input.Password" class="form-control form-control-user" placeholder="Mot de passe" />
                                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                        </div>

                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input asp-for="Input.RememberMe" class="custom-control-input" />
                                                <label class="custom-control-label" asp-for="Input.RememberMe">Se souvenir de moi</label>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Se connecter
                                        </button>
                                    </form>

                                    <hr />
                                    <div class="text-center">
                                        <a class="small" asp-page="/Index">Retour</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>